{
   "swagger":"2.0",
   "info":{
      "title":"HermesFoods API",
      "description":"This is an API to create and buy your meal through a food totem.",
      "version":"1.0.0"
   },
   "host":"hermesfoods.api.dev",
   "basePath":"/v1",
   "schemes":[
      "http",
      "https"
   ],
   "consumes":[
      "application/json"
   ],
   "produces":[
      "application/json"
   ],
   "paths":{
      "/order/":{
         "get":{
            "tags":[
               "Order"
            ],
            "summary":"Get all orders.",
            "description":"Get all orders registered in the system.",
            "responses":{
               "200":{
                  "description":"OK"
               }
            },
            "externalDocs":{
               "url":"https://hermesfoods.api.dev/docs/clients-operations/",
               "description":"Learn more about Client operations provided by this API."
            }
         }
      },
      "/order/{orderID}":{
         "get":{
            "tags":[
               "Order"
            ],
            "summary":"Get a Order.",
            "description":"Get the order by it's unique identifier.",
            "parameters":[
               {
                  "name":"orderID",
                  "in":"path",
                  "description":"Input subscription to save order at api's database",
                  "type":"string",
                  "required":true
               }
            ],
            "responses":{
               "200":{
                  "description":"OK",
                  "schema":{
                     "$ref":"#/definitions/order-input"
                  }
               }
            },
            "externalDocs":{
               "url":"https://hermesfoods.api.dev/docs/clients-operations/",
               "description":"Learn more about Client operations provided by this API."
            }
         },
         "patch":{
            "tags":[
               "Order"
            ],
            "summary":"Partially update a order.",
            "description":"Partially update a order by it's unique identifier.",
            "parameters":[
               {
                  "name":"orderID",
                  "in":"path",
                  "description":"The unique identifier of the order to be partially updated.",
                  "required":true,
                  "type":"string"
               }
            ],
            "requestBody":{
               "description":"Fields to be updated on the order.",
               "required":true,
               "content":{
                  "application/json-patch+json":{
                     "schema":{
                        "type":"array",
                        "items":{
                           "type":"object",
                           "properties":{
                              "op":{
                                 "type":"string",
                                 "enum":[
                                    "add",
                                    "remove",
                                    "replace"
                                 ]
                              },
                              "path":{
                                 "type":"string"
                              },
                              "value":{
                                 
                              }
                           },
                           "required":[
                              "op",
                              "path"
                           ]
                        }
                     }
                  }
               }
            },
            "responses":{
               "200":{
                  "description":"OK",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/definitions/order-input"
                        }
                     }
                  }
               },
               "404":{
                  "description":"Order not found.",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/definitions/order-input"
                        }
                     }
                  }
               },
               "401":{
                  "description":"Not authorized.",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/definitions/order-input"
                        }
                     }
                  }
               },
               "500":{
                  "description":"Internal server error.",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/definitions/order-input"
                        }
                     }
                  }
               }
            },
            "externalDocs":{
               "url":"https://hermesfoods.api.dev/docs/clients-operations/",
               "description":"Learn more about Client operations provided by this API."
            }
         }
      },
      "/client/{clientCPF}":{
         "get":{
            "tags":[
               "Client"
            ],
            "summary":"Get a Client CPF.",
            "description":"Get the client by it's unique identifier.",
            "parameters":[
               {
                  "name":"clientCPF",
                  "in":"path",
                  "description":"Input subscription to save client at api's database",
                  "type":"string",
                  "required":true
               }
            ],
            "responses":{
               "200":{
                  "description":"OK",
                  "schema":{
                     "$ref":"#/definitions/client"
                  }
               }
            },
            "externalDocs":{
               "url":"https://hermesfoods.api.dev/docs/clients-operations/",
               "description":"Learn more about Client operations provided by this API."
            }
         }
      },
      "/client/":{
         "post":{
            "tags":[
               "Client"
            ],
            "summary":"Save a client",
            "description":"Save a client that subscribed at hermes-foods app.",
            "parameters":[
               {
                  "name":"subscriptionInput",
                  "in":"body",
                  "description":"Input subscription to save client at api's database",
                  "schema":{
                     "$ref":"#/definitions/client"
                  },
                  "required":true
               }
            ],
            "responses":{
               "200":{
                  "description":"Successfully saved a client in totem's database.",
                  "schema":{
                     "$ref":"#/definitions/client"
                  }
               }
            },
            "externalDocs":{
               "url":"https://hermesfoods.api.dev/docs/clients-operations/",
               "description":"Learn more about Client operations provided by this API."
            }
         }
      },
      "/product/":{
         "post":{
            "tags":[
               "Product"
            ],
            "summary":"Save a product",
            "description":"Save a product that subscribed at hermes-foods app.",
            "parameters":[
               {
                  "name":"subscriptionInput",
                  "in":"body",
                  "description":"Input subscription to save product at api's database",
                  "schema":{
                     "$ref":"#/definitions/product"
                  },
                  "required":true
               }
            ],
            "responses":{
               "200":{
                  "description":"Successfully saved a product totem's database.",
                  "schema":{
                     "$ref":"#/definitions/product"
                  }
               }
            },
            "externalDocs":{
               "url":"https://hermesfoods.api.dev/docs/clients-operations/",
               "description":"Learn more about Client operations provided by this API."
            }
         }
      },
      "/product/{productID}":{
         "put":{
            "tags":[
               "Product"
            ],
            "summary":"Update a product.",
            "description":"Update the product by it's unique identifier.",
            "parameters":[
               {
                  "name":"productID",
                  "in":"path",
                  "description":"Input subscription to update client at api's database",
                  "type":"string",
                  "required":true
               }
            ],
            "requestBody":{
               "description":"Data for updating the product.",
               "required":true,
               "content":{
                  "application/json":{
                     "schema":{
                        "$ref":"#/definitions/product"
                     }
                  }
               }
            },
            "responses":{
               "200":{
                  "description":"OK",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/definitions/product"
                        }
                     }
                  }
               },
               "404":{
                  "description":"Client not found",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/definitions/product"
                        }
                     }
                  }
               },
               "401":{
                  "description":"Not authorized",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/definitions/product"
                        }
                     }
                  }
               },
               "500":{
                  "description":"Internal server error",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/definitions/product"
                        }
                     }
                  }
               }
            },
            "externalDocs":{
               "url":"https://hermesfoods.api.dev/docs/clients-operations/",
               "description":"Learn more about Client operations provided by this API."
            }
         },
         "delete":{
            "tags":[
               "Product"
            ],
            "summary":"Delete a product.",
            "description":"Delete the product by it's unique identifier.",
            "parameters":[
               {
                  "name":"productID",
                  "in":"path",
                  "description":"Input subscription to delete product at api's database",
                  "type":"string",
                  "required":true
               }
            ],
            "responses":{
               "204":{
                  "description":"OK",
                  "schema":{
                     "$ref":"#/definitions/product"
                  }
               },
               "404":{
                  "description":"Product not found",
                  "schema":{
                     "$ref":"#/definitions/product"
                  }
               },
               "401":{
                  "description":"not authorized",
                  "schema":{
                     "$ref":"#/definitions/product"
                  }
               },
               "500":{
                  "description":"internal server error",
                  "schema":{
                     "$ref":"#/definitions/product"
                  }
               }
            },
            "externalDocs":{
               "url":"https://hermesfoods.api.dev/docs/clients-operations/",
               "description":"Learn more about Client operations provided by this API."
            }
         }
      }
    },
    
      "definitions":{
         "client":{
            "type":"object",
            "properties":{
               "id":{
                  "type":"integer",
                  "example":1
               },
               "name":{
                  "type":"string",
                  "example":"some_name"
               },
               "cpf":{
                  "type":"string",
                  "example":"0000011111"
               },
               "email":{
                  "type":"string",
                  "example":"teste@email.com"
               }
            }
         },
         
          "product":{
            "type":"object",
            "properties":{
               "id":{
                  "type":"integer",
                  "example":1
               },
               "name":{
                  "type":"string",
                  "example":"sandwitch"
               },
               "category":{
                  "type":"string",
                  "example":"in progress"
               },
               "image":{
                  "type":"string",
                  "example":"https://cache-backend-mcd.mcdonaldscupones.com/media/image/product$kMX5kx4H/200/200/original?country=br"
               },
               "description":{
                  "type":"string",
                  "example": "with onion"
               },
               "price":{
                  "type":"number",
                  "example":3.90
               },
               "createdAt":{
                  "type":"string",
                  "example": "30-10-2023 16:57:22"
               }
            }
        },
         
         
         "order-input":{
            "type":"object",
            "properties":{
               "clientId":{
                  "type":"integer",
                  "example":1
               },
               "voucherId":{
                  "type":"integer",
                  "example":1
               }
               
             }
         },
         
         "order-output":{
            "type":"object",
            "properties":{
               "clientId":{
                  "type":"integer",
                  "example":1
               },
               "voucherId":{
                  "type":"integer",
                  "example":1
               },
               "cpf":{
                  "type":"string",
                  "example":"0000011111"
               },
               "email":{
                  "type":"string",
                  "example":"teste@email.com"
               }
         }
    },
         
         
    }
}
